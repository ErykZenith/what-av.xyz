---
import Layout from "../layouts/Layout.astro";
export const prerender = true;
---

<Layout title="Not Found">
    <div class="w-full h-full flex flex-col gap-2 justify-center items-center">
        <p class="text-5xl text-white">Page Not Found</p>
        <p class="text-gray-200 bg-white/10 px-3">
            Oops! The page you are looking for does not exist.
        </p>
        <a
            class="relative flex items-center justify-center py-1 px-5 text-white rounded-lg bg-white/10 my-2 transition-all hover:bg-white/20"
            href="/">Main Page</a
        >
    </div>
</Layout>
