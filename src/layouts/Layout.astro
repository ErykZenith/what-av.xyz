---
import "../styles/global.css";
import background_layout from "../assets/background_layout.mp4";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{`what-av > ${title || "null"}`}</title>
		<meta name="description" content={description || "what-av"} />
	</head>
	<body class="bg-zinc-950 relative flex justify-center items-center">
		<div class="fixed top-0 left-0 z-100 flex px-2 items-center justify-center bg-gray-200 py-1 text-xs uppercase text-black sm:bg-red-200 md:bg-yellow-200 lg:bg-green-200 xl:bg-blue-200 2xl:bg-pink-200"><span class="block sm:hidden">all</span><span class="hidden sm:block md:hidden">sm</span><span class="hidden md:block lg:hidden">md</span><span class="hidden lg:block xl:hidden">lg</span><span class="hidden xl:block 2xl:hidden">xl</span><span class="hidden 2xl:block">2xl</span></div>
		<div class="w-full h-full bg-black/90 backdrop-blur">
			<slot />
		</div>
		<video
			class="object-cover absolute w-full h-full -z-10"
			src={background_layout}
			autoplay
			muted
			loop>
		</video>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
